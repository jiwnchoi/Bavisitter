{
  "name": "bavisitter",
  "type": "module",
  "scripts": {
    "dev": "ANYWIDGET_DEV=1 concurrently --kill-others \"vite\" \"pnpm jupyter\"",
    "jupyter": "hatch run jupyter lab --no-browser --ServerApp.log_level='CRITICAL'",
    "build": "esbuild packages/widget/main.tsx --minify --format=esm --bundle --outdir=bavisitter/static",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . && hatch run ruff check .",
    "format": "prettier . --write --log-level error  && hatch run ruff format .",
    "check": "pnpm lint && pnpm format",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "test": "vitest --globals --run && hatch run pytest"
  },
  "dependencies": {
    "@anywidget/react": "^0.0.4",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/cache": "^11.13.1",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "esbuild": "^0.23.1",
    "formik": "^2.4.6",
    "framer-motion": "^11.7.0",
    "paper": "^0.12.18",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-markdown": "^9.0.1",
    "react-shadow": "^20.5.0",
    "react-syntax-highlighter": "^15.5.0",
    "react-vega": "^7.6.0",
    "remark-gfm": "^4.0.0",
    "simple-statistics": "^7.8.5",
    "snapsvg": "^0.5.1",
    "snapsvg-cjs-ts": "^0.0.6",
    "vega": "^5.30.0",
    "vega-embed": "^6.26.0",
    "vega-lite": "^5.21.0",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@anywidget/vite": "^0.2.0",
    "@eslint/js": "^9.11.1",
    "@types/react": "^18.3.9",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/snapsvg": "^0.5.8",
    "concurrently": "^9.0.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "5.1.0-rc-fb9a90fa48-20240614",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.8",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.1"
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,html,json}": [
      "vitest --globals --run related",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{py}": [
      "hatch run ruff check --fix",
      "hatch run ruff format"
    ]
  }
}
